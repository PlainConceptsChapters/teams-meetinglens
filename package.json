{
  "name": "teams-meetinglens",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Reference implementation scaffold for teams-meetinglens",
  "scripts": {
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "auth:code": "node scripts/auth-code-test.mjs",
    "auth:transcript": "node scripts/transcript-test.mjs",
    "llm:smoke": "tsx scripts/llm-smoke.ts",
    "bot:dev": "tsx scripts/bot-host.ts",
    "teamsapp:build": "node scripts/teamsapp-build.mjs",
    "teamsapp:pack": "npm run teamsapp:build && powershell -NoProfile -Command \"Compress-Archive -Path teamsapp\\manifest.json,teamsapp\\color.png,teamsapp\\outline.png -DestinationPath teamsapp\\teamsapp.zip -Force\""
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "dependencies": {
    "botbuilder": "^4.23.1",
    "dotenv": "^17.2.3",
    "express": "^4.19.2"
  }
}
